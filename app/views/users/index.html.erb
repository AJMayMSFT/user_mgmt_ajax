<div class=".container-fluid">
  <div class="row">
    <div class="col-md-8">
      <div class="">
        <h2>Users</h2>
        <ul  id="users">
          <%= render @users %>
        </ul>
      </div>


    </div>
    <div class="col-md-4">
      <div class="details">
      </div>
      <div class="">
        <h2>Create User</h2>
        <%=form_for :user, url:{action:'create'}, html: {id: 'newish_user' } do |f| %>
        <div class="form-group">
          <%= label_tag :first_name, "First Name" %>
          <%= f.text_field :first_name %>
        </div>
        <div class="form-group">
          <%= label_tag :last_name, "Last Name" %>
          <%= f.text_field :last_name %>
        </div>
        <div class="form-group">
          <%= label_tag :email_address, "Email" %>
          <%= f.text_field :email_address %>
        </div>
        <div class="form-group">
          <%= label_tag :password, "Password" %>
          <%= f.password_field :password %>
        </div>
          <%= f.submit "New user", :class => 'btn btn-default' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
